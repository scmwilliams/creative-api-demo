<h1>Listing assets</h1>

<table>
  <thead>
    <tr>
      <th>Asset group</th>
      <th>Asset type</th>
      <th>Job</th>
      <th>Screen</th>
      <th>Background</th>
      <th>File</th>
      <th>Flexible</th>
      <th>Scalable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <td><%= asset.asset_group %></td>
        <td><%= asset.asset_type %></td>
        <td><%= asset.job %></td>
        <td><%= asset.screen %></td>
        <td><%= asset.background %></td>
        <td><%= asset.file %></td>
        <td><%= asset.flexible %></td>
        <td><%= asset.scalable %></td>
        <td><%= link_to 'Show', asset %></td>
        <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
        <td><%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

